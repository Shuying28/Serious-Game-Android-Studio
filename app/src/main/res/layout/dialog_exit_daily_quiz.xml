<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/close_daily_quiz"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/shojumaru"
        android:text="ARE YOU SURE THAT YOU WANT TO END THIS GAME?"
        android:textColor="@color/aqua"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/shojumaru"
        android:text="'Wisdom begins in wonder.' â€“ Socrates"
        android:textColor="@color/purple_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yes_close_daily_quiz_button"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/kavoon"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/no_close_daily_quiz_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/kavoon"
            android:text="@string/no"
            android:textColor="@color/dark_blue"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/sad" />

</LinearLayout>