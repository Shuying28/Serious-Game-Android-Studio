<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_blue_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".JoinJourneyActivity">

    <ImageView
        android:id="@+id/cat_trivia"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_trivia" />

    <TextView
        android:id="@+id/ready"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Are you ready to test your wits across more than 10 fascinating categories? Let's dive in!"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/intro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/intro"
        app:layout_constraintTop_toBottomOf="@+id/intro" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="269dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/kavoon"
        android:gravity="center"
        android:text="Hey there! Let's embark on an exciting journey to expand our knowledge togetherâ€”with a curious cat!"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cat_trivia" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_input"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="@string/my_name_is"
        android:maxLength="15"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_avatar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/join_journey_button"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kavoon"
        android:background="@drawable/main_button"
        android:backgroundTint="@color/orange"
        android:text="Join Journey"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/select_avatar_button"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_button"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/kavoon"
        android:text="Select Avatar"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/selected_avatar"
        app:layout_constraintEnd_toEndOf="@+id/selected_avatar"
        app:layout_constraintHorizontal_bias="1.1"
        app:layout_constraintStart_toStartOf="@+id/selected_avatar" />

    <ImageView
        android:id="@+id/selected_avatar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ready" />

</androidx.constraintlayout.widget.ConstraintLayout>
