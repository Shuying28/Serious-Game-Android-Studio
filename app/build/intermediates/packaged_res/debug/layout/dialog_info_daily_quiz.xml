<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/info_daily_quiz_title"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/shojumaru"
        android:text="QuIZ InFO"
        android:textColor="@color/aqua"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_daily_quiz_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginStart="25sp"
        android:fontFamily="@font/shojumaru"
        android:layout_marginEnd="20sp"
        android:gravity="center"
        android:text="Level Up Challenge! ðŸš€"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/info_daily_quiz_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="20sp"
        android:text="Think you've got what it takes to conquer the quiz? Here's the deal:"
        android:textColor="@color/white"
        android:fontFamily="@font/kavoon"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/info_daily_quiz_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="20sp"
        android:text="Goal: Achieve a correct rate of over 60% to advance to the next difficulty level!"
        android:textColor="@color/white"
        android:fontFamily="@font/kavoon"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/info_daily_quiz_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="20sp"
        android:text="How: Answer 3 out of 5 questions correctly, and you'll level up to more challenging questions."
        android:textColor="@color/white"
        android:fontFamily="@font/kavoon"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/info_daily_quiz_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="20sp"
        android:text="Why: It's not just about playing; it's about proving your knowledge and mastering each level."
        android:textColor="@color/white"
        android:fontFamily="@font/kavoon"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/info_daily_quiz_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="20sp"
        android:gravity="center"
        android:text="Ready to test your skills and climb the ranks? Let's go! ðŸŽ‰"
        android:textColor="@color/white"
        android:fontFamily="@font/kavoon"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />
    <TextView
        android:id="@+id/info_daily_quiz_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="20sp"
        android:fontFamily="@font/kavoon"
        android:text="@string/info_daily_quiz_2"
        android:textColor="@color/orange"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_daily_quiz_2">

        <Button
            android:id="@+id/start_daily_quiz_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#5AA8AF"
            android:fontFamily="@font/kavoon"
            android:text="Start Quiz"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/try_it_later_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/kavoon"
            android:text="@string/try_it_later"
            android:textColor="#5AA8AF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="232dp"
        android:fontFamily="@font/kavoon"
        android:gravity="center"
        android:text="'The beautiful thing about learning is that no one can take it away from you.' â€“ B.B. King"
        android:textColor="@color/purple_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
        app:layout_constraintEnd_toEndOf="@+id/user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_avatar"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-40dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/gambateh" />
</androidx.constraintlayout.widget.ConstraintLayout>
