        <androidx.cardview.widget.CardView
            android:id="@+id/mathematics_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/dark_blue"
            app:layout_constraintEnd_toStartOf="@+id/science_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/math" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mathematics"
                    android:fontFamily="@font/kavoon"
                    android:textColor="@color/purple_text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/math_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Math Score: 0"
                        android:textSize="12sp"
                        android:textColor="@color/purple_text" />
                    <TextView
                        android:id="@+id/math_rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct Rate: 0%"
                        android:textSize="12sp"
                        android:textColor="@color/purple_text" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/science_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mathematics_card"
            app:layout_constraintTop_toBottomOf="@+id/user_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/science" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/kavoon"
                    android:text="Science"
                    android:textColor="@color/purple_text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/science_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Science Score: 0"
                        android:textSize="12sp"
                        android:textColor="@color/purple_text" />
                    <TextView
                        android:id="@+id/science_rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct Rate: 0%"
                        android:textSize="12sp"
                        android:textColor="@color/purple_text" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/history_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="@+id/mathematics_card"
            app:layout_constraintStart_toStartOf="@+id/mathematics_card"
            app:layout_constraintTop_toBottomOf="@+id/mathematics_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/video_games" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/kavoon"
                    android:text="History"
                    android:textColor="@color/purple_text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/history_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:text="History Score: 0"
                        android:textColor="@color/purple_text" />
                    <TextView
                        android:id="@+id/history_rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Correct Rate: 0%"
                        android:textColor="@color/purple_text" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/animals_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="@+id/science_card"
            app:layout_constraintStart_toStartOf="@+id/science_card"
            app:layout_constraintTop_toBottomOf="@+id/science_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/animals" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/kavoon"
                    android:text="Animals"
                    android:textColor="@color/purple_text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/animals_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Animals Score: 0"
                        android:textSize="12sp"
                        android:textColor="@color/purple_text" />
                    <TextView
                        android:id="@+id/animals_rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct Rate: 0%"
                        android:textSize="12sp"
                        android:textColor="@color/purple_text" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animals_card"
            app:lottie_autoPlay="true"
            app:lottie_fileName="animated-cat.json"
            app:lottie_loop="true" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/shojumaru"
            android:text="Meowww, practice makes perfect!"
            android:textColor="@color/purple_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/practice_quiz_generate_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lottie_animated"
            app:layout_constraintTop_toBottomOf="@+id/animals_card" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/practice_quiz_generate_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_button"
            android:text="@string/practice"
            android:fontFamily="@font/kavoon"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottie_animated" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

